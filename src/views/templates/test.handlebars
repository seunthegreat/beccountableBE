<style type="text/css">

.header {
  background: #8a8a8a;
}

.header .columns {
  padding-bottom: 0;
}

.header p {
  color: #fff;
  margin-bottom: 0;
}

.header .wrapper-inner {
  padding: 20px; /*controls the height of the header*/
}

.header .container {
  background: #8a8a8a;
}

.wrapper.secondary {
  background: #f3f3f3;
}

</style>
<!-- move the above styles into your custom stylesheet -->
<wrapper class="header" bgcolor="#8a8a8a">
  <container>
    <row class="collapse">
      <columns small="6" valign="middle">
        <p class="text-right">Beccountable Team</p>
      </columns>
    </row>
  </container>
</wrapper>

<container>

  <spacer size="16"></spacer>
  
  <row>
    <columns>
      <h1>Hi, {{name}}</h1>
      <p class="lead">Please use the following OTP code to verify your Beccountable account {{hashedEmail}}.</p>
      <p>{{message}}</p>
      <callout class="primary">
        <p>Thanks, The Beccountable account team</p>
      </callout>

    </columns>
  </row>
</container>